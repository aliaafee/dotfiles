syntax on
set cursorline
set nobackup
set autoread
set number
set showcmd
set showmode
set scrolloff=5
filetype on
filetype indent on
filetype plugin on
set nocompatible
set mouse=a

" theme
colorscheme onehalfdark

" tabs and indenting
set smarttab
set expandtab
set ts=4 sw=4
set autoindent
set smartindent

" Line breaks
set linebreak
set breakindent showbreak=..
set whichwrap=b,s,<,>,[,]

" bells
set noerrorbells
set visualbell

" spell checking
set spell

" search
set hlsearch
set showmatch
set incsearch


