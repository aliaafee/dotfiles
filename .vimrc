syntax on
set cursorline
set nobackup
set autoread
set number
set showcmd
set showmode
set scrolloff=5
filetype on
filetype indent on
filetype plugin on
set nocompatible

" tabs and indenting
set smarttab
set expandtab
set ts=4 sw=4
set autoindent
set smartindent


" bells
set noerrorbells
set visualbell


" search
set hlsearch
set showmatch



